{
  "name": "connect-page",
  "description": "Validator monitoring and wallet-connect landing page",
  "variables": {
    "CHAIN_ID": { "description": "Cosmos chain ID", "example": "integra-1", "required": true },
    "CHAIN_NAME": { "description": "Display chain name", "example": "Integra Mainnet", "required": true },
    "EVM_CHAIN_ID": { "description": "Numeric EVM chain ID", "example": "26217", "required": true },
    "EVM_CHAIN_ID_HEX": { "description": "Hex EVM chain ID", "example": "0x6669", "required": true },
    "BECH32_PREFIX": { "description": "Bech32 address prefix", "example": "integra", "required": true },
    "RPC_URL": { "description": "EVM JSON-RPC endpoint", "example": "https://mynode.example.com/rpc", "required": true },
    "WS_URL": { "description": "EVM WebSocket endpoint", "example": "wss://mynode.example.com/ws", "required": true },
    "COMETBFT_URL": { "description": "CometBFT RPC endpoint", "example": "https://mynode.example.com/cometbft", "required": true },
    "DNS": { "description": "Validator DNS hostname", "example": "mynode.example.com", "required": true },
    "DENOM": { "description": "Display token symbol", "example": "IRL", "required": true },
    "MIN_DENOM": { "description": "Base denomination", "example": "airl", "required": true },
    "DECIMALS": { "description": "Token decimals", "example": "18", "required": true },
    "VALIDATOR_ADDRESS": { "description": "Bech32 validator address", "required": true },
    "OPERATOR_NAME": { "description": "Validator operator display name", "example": "adamboudj", "required": true },
    "NODE_IP": { "description": "Node IP address", "example": "3.92.110.107", "required": true },
    "PROJECT_NAME": { "description": "npm package name", "example": "integra-connect", "required": true },
    "PAGE_TITLE": { "description": "HTML page title", "example": "Integra Connect", "required": true }
  },
  "files": [
    { "template": "package.json.template", "output": "package.json" },
    { "template": "tsconfig.json.template", "output": "tsconfig.json" },
    { "template": "postcss.config.mjs.template", "output": "postcss.config.mjs" },
    { "template": "next.config.ts.template", "output": "next.config.ts" },
    { "template": "src/app/globals.css.template", "output": "src/app/globals.css" },
    { "template": "src/app/layout.tsx.template", "output": "src/app/layout.tsx" },
    { "template": "src/app/page.tsx.template", "output": "src/app/page.tsx" },
    { "template": "src/app/api/rpc/route.ts.template", "output": "src/app/api/rpc/route.ts" },
    { "template": "src/app/api/status/route.ts.template", "output": "src/app/api/status/route.ts" },
    { "template": "src/lib/chain-config.ts.template", "output": "src/lib/chain-config.ts" },
    { "template": "src/lib/wallet-utils.ts.template", "output": "src/lib/wallet-utils.ts" },
    { "template": "src/components/chain-status.tsx.template", "output": "src/components/chain-status.tsx" },
    { "template": "src/components/copy-button.tsx.template", "output": "src/components/copy-button.tsx" },
    { "template": "src/components/health-dashboard.tsx.template", "output": "src/components/health-dashboard.tsx" },
    { "template": "src/components/integra-logo.tsx.template", "output": "src/components/integra-logo.tsx" },
    { "template": "src/components/network-info.tsx.template", "output": "src/components/network-info.tsx" },
    { "template": "src/components/wallet-buttons.tsx.template", "output": "src/components/wallet-buttons.tsx" },
    { "template": "src/components/ws-status.tsx.template", "output": "src/components/ws-status.tsx" },
    { "template": "src/hooks/use-chain-status.ts.template", "output": "src/hooks/use-chain-status.ts" },
    { "template": "src/hooks/use-rpc-health.ts.template", "output": "src/hooks/use-rpc-health.ts" },
    { "template": "src/hooks/use-websocket.ts.template", "output": "src/hooks/use-websocket.ts" }
  ]
}
